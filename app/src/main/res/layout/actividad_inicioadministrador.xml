<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000FF">


    <TextView
        android:id="@+id/textViewSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:textColor="#FF0000"
        android:textSize="14sp"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido!"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <Button
            android:id="@+id/buttonAnadirProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AÃ±adir Producto"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"/>


        <Button
            android:id="@+id/buttonModificarProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar Producto"
            android:textSize="24sp"
            android:layout_below="@+id/buttonAnadirProducto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</RelativeLayout>
